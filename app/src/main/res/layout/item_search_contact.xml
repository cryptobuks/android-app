<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <one.mixin.android.widget.AvatarView
            android:id="@+id/search_avatar_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin20"
            android:layout_marginEnd="@dimen/margin16"
            android:layout_marginTop="@dimen/margin12"
            android:layout_marginBottom="@dimen/margin12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/search_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxWidth="240dp"
            android:singleLine="true"
            android:textColor="@color/gray_black"
            android:textSize="16sp"
            tools:text="name"/>

        <ImageView
            android:id="@+id/verified_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_user_verified"
            android:visibility="visible"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/bot_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_bot"
            android:visibility="visible"/>
    </LinearLayout>

    <View
        android:id="@+id/ph1"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:visibility="gone"
        android:background="@color/white"/>

    <View
        android:id="@+id/ph2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:background="@drawable/ic_shadow_divider"/>
</LinearLayout>