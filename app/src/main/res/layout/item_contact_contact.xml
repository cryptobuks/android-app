<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground">

    <Space
        android:id="@+id/center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/index"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="@dimen/margin12"
        android:background="@drawable/bg_circle_contact"
        android:gravity="center"
        android:textColor="@color/text_gray"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/contact_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/index"
        android:layout_toStartOf="@id/invite_tv"
        android:layout_above="@id/center"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/gray_black"/>

    <TextView
        android:id="@+id/contact_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/index"
        android:layout_toStartOf="@id/invite_tv"
        android:layout_below="@id/center"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/wallet_text_gray"/>

    <TextView
        android:id="@+id/invite_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin20"
        android:gravity="center"
        android:text="@string/invite"
        android:textColor="@color/white"
        android:background="@drawable/bg_wallet_blue_btn"/>
</RelativeLayout>