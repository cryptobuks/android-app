<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    tools:layout_editor_absoluteY="81dp">

    <Space
        android:id="@+id/center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"/>

    <one.mixin.android.widget.BadgeTextAvatarView
        android:id="@+id/avatar_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin20"
        android:layout_marginTop="@dimen/margin16"
        android:layout_marginBottom="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avatar_iv"
        android:layout_above="@id/center">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:maxWidth="220dp"
            android:singleLine="true"
            android:textColor="@color/gray_black"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/verified_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_user_verified"
            android:visibility="gone"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/bot_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_bot"
            android:visibility="gone"
            android:contentDescription="@null"/>
    </LinearLayout>

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin20"
        android:layout_above="@id/center"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/sf_pro_light"
        android:textColor="@color/wallet_text_gray"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_toEndOf="@id/avatar_iv"
        android:layout_below="@id/center"
        android:layout_marginEnd="@dimen/margin20"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="middle"
            android:fontFamily="@font/sf_pro_light"
            android:maxWidth="120dp"
            android:singleLine="true"
            android:textColor="@color/wallet_text_gray"
            android:textSize="13sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/msg_flag"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="3dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_light"
            android:maxLines="1"
            android:textColor="@color/text_gray"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/mute_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_home_mute"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/msg_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_home_pin"
            android:contentDescription="@null"/>

        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.BlueAccent"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>