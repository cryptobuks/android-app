<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_upper_round"
    android:orientation="vertical">

    <one.mixin.android.widget.RoundTitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <one.mixin.android.widget.AvatarView
        android:id="@+id/avatar"
        android:layout_width="@dimen/bottom_avatar_size"
        android:layout_height="@dimen/bottom_avatar_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:transitionName="@string/avatar_transition_name"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="180dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/bottom_name_text_size"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:textColor="@color/text_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/margin20"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <FrameLayout
            android:id="@+id/edit_fl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/mixin_ripple"
                android:src="@drawable/ic_profile_edit"
                android:contentDescription="@string/contact_other_add"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/camera_fl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/mixin_ripple"
                android:src="@drawable/ic_profile_camera"
                android:contentDescription="@string/share"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/more_fl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/mixin_ripple"
                android:src="@drawable/ic_more"
                android:contentDescription="@string/more"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>